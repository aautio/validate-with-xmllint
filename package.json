  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aautio/validate-with-xmllint"
  },
  "author": "Ari Autio <ari.autio@iki.fi>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^11.9.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "typescript": "^3.3.3"
  },
  "keywords": [
    "xml",
    "schema",
    "xsd",
    "validation",
    "xmllint",
    "dtd",
